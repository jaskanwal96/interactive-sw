{
  "name": "sw-interactive",
  "version": "1.0.0",
  "description": "Interactive Game to learn Service Workers",
  "main": "js/index.js",
  "scripts": {
    "start": "browser-sync start --server --files css/*.css, js/*.js, *.html",
    "start:http": "http-server",
    "dev": "vite",
    "build": "vite build",
    "serve": "vite preview",
    "watch": "chokidar 'src/**/*' -c 'pnpm run build'",
