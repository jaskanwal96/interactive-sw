    "lint:fix": "eslint . --ext .js --fix"
  },
  "author": "jaskanwal96@gmail.com",
  "license": "ISC",
  "dependencies": {
    "browser-sync": "^3.0.2",
    "http-server": "^14.1.1"
  },
  "devDependencies": {
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.5",
    "vite": "^5.1.1",
    "vite-plugin-eslint": "^1.8.1",
    "vitest": "^1.2.2"
  }
}
